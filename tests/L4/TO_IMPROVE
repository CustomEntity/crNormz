void my_amazing_sorter(int *array, int size) {
    int i = 0;

    while (i < size) {
        if (array[i] > array[i + 1])
        {
            swap_elem(array, i, i + 1);
            printf("| swap %d => %d | new_list {", array[i], array[i + 1]);
            i = 0;
        }
    }
}